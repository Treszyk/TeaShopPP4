{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ordersRoute": {
        "ClusterId": "OrderServiceCluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orders"
          }
        ]
      },
      "usersRoute": {
        "ClusterId": "UserServiceCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/users"
          }
        ]
      },
      "catalogRoute": {
        "ClusterId": "CatalogServiceCluster",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/catalog"
          }
        ]
      },
      "cartRoute": {
        "ClusterId": "CartServiceCluster",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/cart"
          }
        ]
      },
    },
    "Clusters": {
      "OrderServiceCluster": {
        "Destinations": {
          "default": {
            "Address": "http://orderservice:8080",
            "Swaggers": [
              {
                "Paths": [ "/swagger/v1/swagger.json" ],
                "PrefixPath": "/orders"
              }
            ]
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Path": "/swagger/v1/swagger.json",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        }
      },
      "UserServiceCluster": {
        "Destinations": {
          "default": {
            "Address": "http://userservice:8080",
            "Swaggers": [
              {
                "Paths": [ "/swagger/v1/swagger.json" ],
                "PrefixPath": "/users"
              }
            ]
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Path": "/swagger/v1/swagger.json",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        }
      },
      "CatalogServiceCluster": {
        "Destinations": {
          "default": {
            "Address": "http://catalogservice:8080",
            "Swaggers": [
              {
                "Paths": [ "/swagger/v1/swagger.json" ],
                "PrefixPath": "/catalog"
              }
            ]
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Path": "/swagger/v1/swagger.json",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        }
      },
      "CartServiceCluster": {
        "Destinations": {
          "default": {
            "Address": "http://cartservice:8080",
            "Swaggers": [
              {
                "Paths": [ "/swagger/v1/swagger.json" ],
                "PrefixPath": "/cart"
              }
            ]
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Path": "/swagger/v1/swagger.json",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        }
      }
    },
    "Services": {
      "OrderService": "http://orderservice:8080",
      "UserService": "http://userservice:8080",
      "CartService": "http://cartservice:8080",
      //"PaymentService": "http://paymentservice:8080"
    }


  }
}
